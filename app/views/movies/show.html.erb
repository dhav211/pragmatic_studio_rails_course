<section class="movie-details">
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2><%= year_released @movie %> &bull;</h2>
    <p><%= @movie.description %></p>
    <table>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross @movie %></td>
      </tr>
    </table>
  </div>
</section>
